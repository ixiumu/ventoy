map --hook
chainloader (fd0)+1
map (hd1) (hd0)
map --hook
rootnoverify (fd0)

title [7] 清除 Windows 用户密码 (中文)
terminal console
echo $[0x0C]  Loading DOS tool ...
map --mem /BOOT/IMGS/DOS.IMG (fd0)
map --rehook
dd if=(fd0)/config.sys of=(fd0)/config.sys bs=1 skip=65 count=1 seek=185
write --offset=1010 (fd0)/autoexec.bat call pwd.bat c
chainloader (fd0)+1
rootnoverify (fd0)

